<idea-plugin>
  <id>com.epam.sha.intellij.locatorupdater</id>
  <name>Locator Updater</name>
  <version>2.0.1</version>
  <vendor email="knpdeveloper@gmail.com" url="https://github.com/GannaChernyshova">Anna Chernyshova</vendor>

  <description>
    IntelliJ IDEA plugin for updating selenium locators via remote call.
  </description>
  <depends>com.intellij.modules.java</depends>

  <application-components>
    <component>
      <implementation-class>com.epam.sha.intellij.locatorupdater.LocatorUpdaterComponent</implementation-class>
    </component>
  </application-components>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.epam.sha.intellij.locatorupdater.settings.LocatorUpdaterSettings"/>
  </extensions>

  <actions>
    <action id="updateBy" class="com.epam.sha.intellij.locatorupdater.updater.UpdateElement" text="Update-Element" />
  </actions>
</idea-plugin>