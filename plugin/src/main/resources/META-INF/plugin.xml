<idea-plugin>
    <id>org.websync</id>
    <name>WebSync</name>
    <version>0.0.0</version>
    <vendor email="wsbaser@gmail.com" url="https://github.com/websyncio/websync-idea">Volkov Aleksey</vendor>

    <description>
        IntelliJ IDEA plugin for updating selenium locators via remote call.
    </description>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <applicationListeners>
        <listener class="org.websync.ProjectOpenCloseListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.websync.WebSyncService"/>
        <preloadingActivity implementation="org.websync.WebSyncPreloadingActivity"/>
    </extensions>

    <actions>
        <!--    <action id="updateBy" class="com.epam.sha.intellij.locatorupdater.updater.UpdateElement" text="Update-Element" />-->
    </actions>
</idea-plugin>