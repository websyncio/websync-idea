<idea-plugin>
    <id>org.websync</id>
    <name>WebSync</name>
    <version>0.0.0</version>
    <vendor email="wsbaser@gmail.com" url="https://github.com/websyncio/websync-idea">Volkov Aleksey</vendor>

    <description>
        IntelliJ IDEA plugin for updating selenium locators via remote call.
    </description>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.websync.WebSyncService" preload="true"/>
        <editorFactoryDocumentListener implementation="org.websync.updater.WebsyncDocumentListener"/>
    </extensions>


    <applicationListeners>
        <listener class="org.websync.ProjectOpenCloseListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <idea-version since-build="193"/>
    <actions>
        <action id="org.websync.SendTestEventAction" class="org.websync.SendTestEventAction" text="Send test event"
                description="Send test event to websync-idea plugin">
            <add-to-group group-id="HelpMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt W"/>
        </action>
    </actions>
</idea-plugin>